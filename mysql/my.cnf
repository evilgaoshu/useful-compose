[client]
default-character-set = utf8
[mysql]
default-character-set = utf8
[mysqld]
character-set-server = utf8
lower_case_table_names = 1
slow_query_log = ON
slow_query_log_file = /var/log/mysql/mysql_slow.log
long_query_time = 1
max_connections= 1000
wait_timeout= 600
max_allowed_packet=6000M